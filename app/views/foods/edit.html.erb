	<p>
		<%= f.label :name %><br>
		<%= f.text_field :name %> <br>
		<%= f.label :calories %><br>
		<%= f.text_field :calories %><br>
		<%= f.label :protien %><br>
		<%= f.text_field :protien %><br>
		<%= f.label :carbs %><br>
		<%= f.text_field :carbs %><br>
		<%= f.label :fat %><br>
